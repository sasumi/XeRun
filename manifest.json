{
	"manifest_version": 3,
	"name": "XeRun",
	"version": "1.0",
	"description": "小鹅通工作助手",
	"author": "sasumi",
	"homepage_url": "https://blog.yikepi.com",
	"action": {
		"default_title": "小鹅通工作助手，功能请查阅帮助文档",
		"default_icon": {
			"16": "icon.png",
			"24": "icon.png",
			"32": "icon.png"
		},
		"default_popup": "popup/string.html"
	},
	"icons": {
		"16": "icon.png",
		"32": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"permissions": ["activeTab", "scripting", "tabs", "storage", "clipboardRead", "clipboardWrite"],
	"background": {
		"service_worker": "background/background.js"
	},
	"web_accessible_resources":[
		{
			"resources":["common/common.js", "content/right_arr.png"],
			"matches":["<all_urls>"]
		}
	],
	"content_scripts": [{
		"run_at": "document_end",
		"matches": ["<all_urls>"],
		"js": ["content/content.js"]
	}]
}